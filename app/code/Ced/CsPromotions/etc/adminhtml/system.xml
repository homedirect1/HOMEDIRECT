<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../Magento/Config/etc/system_file.xsd">
    <system>
        <section id="ced_csmarketplace">
            <group id="general">
                <label>General</label>
                <field id="cspromotions_active" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="0">
                      <label>Enable Vendor Promotion System</label>
                      <config_path>ced_cspromotions/general/cspromotions_active</config_path>
                      <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                  </field>                
            </group>
            <group id="vpromotions" translate="label" type="text" sortOrder="5" showInDefault="1" showInWebsite="1" showInStore="0">
                <label>Vendor Promotion Rule</label>
                <field id="catlog_price_approval" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="0">
                      <label>Require Vendor Catalog Price Rule Admin Approval</label>
                      <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="cart_price_approval" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="0">
                      <label>Require Vendor Cart Price Rule Admin Approval</label>
                      <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>    
            </group>
        </section>
    </system>
</config>
